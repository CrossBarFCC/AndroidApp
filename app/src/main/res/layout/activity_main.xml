<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actvities.MainActivity">

    <LinearLayout
        android:id="@+id/logo_ll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="Logo"
            android:src="@drawable/fca_logo"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView

            android:id="@+id/logo_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="Logo"
            android:src="@drawable/transparentlogo"
            android:transitionName="logo transition"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo_ll"
        >


    </androidx.cardview.widget.CardView>






    <LinearLayout
        android:id="@+id/begin_quiz"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"
        app:layout_constraintEnd_toStartOf="@id/question_setter"
        app:layout_constraintTop_toBottomOf="@+id/logo_ll"
        app:layout_constraintStart_toStartOf="parent"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:src="@drawable/quizlogo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Begin Quiz!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_setter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_ll"
        app:layout_constraintStart_toEndOf="@id/begin_quiz"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:src="@drawable/qsetter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Admin Only!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/begin_crossword"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_bg"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"

        app:layout_constraintTop_toBottomOf="@+id/question_setter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/begin_bingo"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:src="@drawable/crossword"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:text="Begin CrossWord!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/begin_bingo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_bg"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"

        app:layout_constraintTop_toBottomOf="@+id/question_setter"
        app:layout_constraintStart_toEndOf="@+id/begin_crossword"
        app:layout_constraintEnd_toEndOf="parent"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:src="@drawable/bingo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat"
            android:text="Begin Bingo!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/begin_postsession"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_bg"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"

        app:layout_constraintTop_toBottomOf="@+id/begin_bingo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/begin_scramble"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:src="@drawable/mcq"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Post Session MCQ" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/begin_scramble"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/icon_bg"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"

        app:layout_constraintTop_toBottomOf="@+id/begin_bingo"
        app:layout_constraintStart_toEndOf="@+id/begin_postsession"
        app:layout_constraintEnd_toEndOf="parent"

        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:src="@drawable/cubes"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Word Scramble!" />

    </LinearLayout>



    <ImageView
        android:id="@+id/quiz_svg"
        android:visibility="gone"
        android:layout_width="300dp"
        android:translationZ="-1dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_quiz"
        />

</androidx.constraintlayout.widget.ConstraintLayout>