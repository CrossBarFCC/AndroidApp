<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/attempted_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempted: 8"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" />


        <TextView
            android:id="@+id/question_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Please wait while question is loading"
            android:layout_marginHorizontal="3dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/attempted_text"
            />

        <TextView
            android:id="@+id/option_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Please wait while option A is loading"
            android:layout_marginHorizontal="3dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/question_Text"
            />

        <TextView
            android:id="@+id/optionA_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option A list"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintTop_toBottomOf="@+id/option_A"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" />



        <TextView
            android:id="@+id/option_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Please wait while option B is loading"
            android:layout_marginHorizontal="3dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/optionA_list"
            />

        <TextView
            android:id="@+id/optionB_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option B list"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintTop_toBottomOf="@+id/option_B"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/option_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Please wait while option C is loading"
            android:layout_marginHorizontal="3dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/optionB_list"
            />
        <TextView
            android:id="@+id/optionC_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option C list"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintTop_toBottomOf="@+id/option_C"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/option_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Please wait while option D is loading"
            android:layout_marginHorizontal="3dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/optionC_list"
            />
        <TextView
            android:id="@+id/optionD_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option D list"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintTop_toBottomOf="@+id/option_D"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>